<Page x:Class="ShoesShop.Pages.StatisticPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatisticPage">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

            <TextBlock FontSize="24" Foreground="{DynamicResource ForegroundBrush}">
                <Run Text="Популярный товар:        " FontWeight="Bold"/>
                <Run x:Name="Popular" Text="Puma SVO" />
            </TextBlock>
            <Border Height="1" Background="{DynamicResource ThicknessBrush}"  Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Среднее кол-во
                           продаваемых пар:" Foreground="{DynamicResource ForegroundBrush}" FontWeight="Bold" FontSize="24" TextWrapping="Wrap" Width="300"/>
                <TextBlock x:Name="Average"  Foreground="{DynamicResource ForegroundBrush}"  Text="12" FontSize="24" VerticalAlignment="Center" />
            </StackPanel>
            <Border Height="1" Background="{DynamicResource ThicknessBrush}"  Margin="0,10,0,10"/>

            <TextBlock FontSize="24" Foreground="{DynamicResource ForegroundBrush}" >
                <Run Text="Кол-во типов обуви:        " FontWeight="Bold"/>
                <Run x:Name="Type" Text="12" />
            </TextBlock>
            <Border Height="1" Background="{DynamicResource ThicknessBrush}"  Margin="0,10,0,10"/>

            <TextBlock FontSize="24" Foreground="{DynamicResource ForegroundBrush}" >
                <Run Text="Кол-во товаров:        " FontWeight="Bold"/>
                <Run x:Name="Goods" Text="12" />
            </TextBlock>
            <Border Height="1" Background="{DynamicResource ThicknessBrush}"  Margin="0,10,0,10"/>

            <TextBlock FontSize="24" Foreground="{DynamicResource ForegroundBrush}" >
                <Run Text="Кол-во заказов:        " FontWeight="Bold"/>
                <Run x:Name="Orders" Text="12" />
            </TextBlock>
            <Border Height="1" Background="{DynamicResource ThicknessBrush}"  Margin="0,10,0,10"/>

        </StackPanel>
    </Grid>
</Page>
