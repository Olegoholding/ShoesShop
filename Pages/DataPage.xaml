<Page x:Class="ShoesShop.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShoesShop.Pages"
      xmlns:card="clr-namespace:ShoesShop.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Margin="15"
                Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="15"
                BorderBrush="{DynamicResource ThicknessBrush}"
                BorderThickness="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition  Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Background="Transparent" Name="SrcBox" FontSize="28" BorderThickness="0" Margin="12,0,0,0"/>

                <Border Grid.Column="0"  HorizontalAlignment="Right" Width="1" Height="20" Background="{DynamicResource ThicknessBrush}"/>

                <TextBlock Cursor="Hand" Grid.Column="1" FontSize="20" Text="⌕" Foreground="{DynamicResource ThicknessBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,15,0"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel  Name="wrapPanel">

            </WrapPanel>
        </ScrollViewer>

        <Border Grid.Column="1"
                Margin="15"
                Background="{DynamicResource BackgroundBrush}" 
                CornerRadius="15"
                BorderBrush="{DynamicResource ThicknessBrush}"
                BorderThickness="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition  Width="auto"/>
                </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0"  MinWidth="200" Style="{DynamicResource ComboBoxStyle1}" FontSize="22" Margin="0,0,15,0">
                        <ComboBoxItem Content="fwerf"/>
                    </ComboBox>
                    <Border Grid.Column="0"  HorizontalAlignment="Right" Width="1" Height="20" Background="{DynamicResource ThicknessBrush}"/>

                <TextBlock Cursor="Hand" Grid.Column="1" FontSize="20" Text="Удалить" Foreground="{DynamicResource ThicknessBrush}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="15,0,15,0"/>
            </Grid>
        </Border>


        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="stackPanel" Margin="15,0,15,0">
                <TextBlock Text="Изображение" FontSize="16"/>
                <TextBox FontSize="20" Margin="0,0,0,15"/>
                
                <TextBlock Text="Название" FontSize="16"/>
                <TextBox FontSize="20" Margin="0,0,0,15"/>
                
                <TextBlock Text="Цена" FontSize="16"/>
                <TextBox FontSize="20" Margin="0,0,0,15"/>
            </StackPanel>

            <Button Grid.Row="1" Margin="15" Width="200" Height="50" Style="{DynamicResource button}" Foreground="White" FontSize="20" FontWeight="Bold" Content="Добавить"/>
        </Grid>
    </Grid>
</Page>
