<UserControl x:Class="ShoesShop.UserControls.OrdersCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoesShop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" Width="auto" MaxWidth="500">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Border Margin="15" Background="{DynamicResource BackgroundBrush}" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="LightGray"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="IdText" Text="#1" Foreground="Gray" VerticalAlignment="Center" Margin="15,15,15,15" FontSize="18" TextWrapping="Wrap"/>
                <StackPanel Grid.Row="1">

                    <TextBlock Text="ФИО" VerticalAlignment="Center" Foreground="Gray" Margin="15,0,0,0" FontSize="18" TextWrapping="Wrap"/>
                    <TextBlock x:Name="FioText" Text="Пидоров Сергей" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,15,15" FontSize="18" TextWrapping="Wrap"/>

                    <TextBlock Text="Товар" VerticalAlignment="Center" Foreground="Gray" Margin="15,0,0,0" FontSize="18" TextWrapping="Wrap"/>
                    <TextBlock x:Name="GoodsText" Text="Nike ZOV     x4" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,15,15" FontSize="18" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Итого" VerticalAlignment="Center" Foreground="Gray" Margin="15,0,0,0" FontSize="18" TextWrapping="Wrap"/>
                        <TextBlock x:Name="PriceText" VerticalAlignment="Center" Text="2280 руб." FontWeight="Bold" Margin="15,0,15,0" FontSize="18" TextWrapping="Wrap"/>
                        
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>


    </Grid>
</UserControl>
