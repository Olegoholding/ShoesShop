<UserControl x:Class="ShoesShop.UserControls.GoodsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoesShop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200" MaxWidth="200">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Border Margin="15" Background="{DynamicResource BackgroundBrush}" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="LightGray"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image x:Name="ImageBox" Height="100" Width="100" Margin="15" Stretch="Uniform"/>

                <TextBlock x:Name="NameText" Grid.Row="1" Text="Nike" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,15,15" FontSize="18" TextWrapping="Wrap"/>
                <TextBlock x:Name="PriceText" Grid.Row="2" Text="2000" VerticalAlignment="Bottom" Margin="15,0,0,15" FontSize="18" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left"/>
            </Grid>
        </Border>


    </Grid>
</UserControl>
