                         Style="{StaticResource NavigationButton}" Checked="SizesButton_Checked"
                         Tag="showTypes"
                         Click="SizesButton_Checked"/>
            <RadioButton x:Name="GoodsButton"
                         Content="Товары"
                         Style="{StaticResource NavigationButton}"
                         Tag="showGoods"
                         Click="SizesButton_Checked"/>
            <RadioButton x:Name="OrdersButton"
                         Content="Заказы"
                         Style="{StaticResource NavigationButton}"
                         Tag="showOrders"
                         Click="SizesButton_Checked" Cursor="Hand"/>
            <RadioButton x:Name="UserButton"
                         Content="Пользователи"
                         Tag="showUsers"
                         Style="{StaticResource NavigationButton}"
                         Click="SizesButton_Checked" Cursor="Hand"/>
